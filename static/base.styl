html
    overflow: hidden

// font-awesome补充
.fa-patch
    padding-right: 2px

.flexbox
    display:flex
    height:100%
    flex-direction:column
    .grow
        flex-basis: 0
        flex-grow: 1
        overflow-y: auto

.panel
    background-color: #ffffff
    border: 1px solid transparent
    border-radius: 1px
    -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05)
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05)
    > .panel-toolbar
        padding: 8px 12px
        border-bottom: 1px solid #dddddd

.panel-transparent
    box-shadow:none
    .panel-heading
        padding: 8px 12px
        border-bottom: 1px solid #dce8f1;
        padding-left: 3px;
        border-top-right-radius: 0px
        border-top-left-radius: 0px
    .panel-body
        padding:10px 0
        border-width: 0
        background-color: transparent
    .panel-footer
        border-top: 1px solid #ddd
        text-align: right
        padding: 10px 20px 0 0

.no-margin
    margin: 0 !important

.router-link-active
    color: #20a0ff !important
    text-decoration: none

// 菜单style
.el-menu 
    a
        color: #48576a
        text-decoration: none